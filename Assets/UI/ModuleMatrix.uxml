<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <ui:VisualElement name="module_matrix_ui" style="flex-grow: 1; background-color: rgb(255, 255, 255); flex-direction: column; justify-content: center; align-items: center; visibility: visible;">
        <ui:VisualElement style="flex-grow: 1; background-color: rgba(0, 0, 0, 0); flex-direction: row;">
            <ui:VisualElement style="flex-grow: 1; background-color: rgba(0, 0, 0, 0);">
                <ui:ListView focusable="true" name="modules_list" style="flex-grow: 1; width: 35%; flex-wrap: wrap; height: 100%;" />
                <ui:DropdownField label="Select" index="-1" choices="System.Collections.Generic.List`1[System.String]" name="modules_dropdown" />
                <ui:Button text="Add Module" display-tooltip-when-elided="true" name="add_module" />
            </ui:VisualElement>
            <ui:VisualElement name="module" style="flex-grow: 1; background-color: rgba(0, 0, 0, 0); width: 65%; height: 100%;">
                <ui:Label tabindex="-1" text="Title" display-tooltip-when-elided="true" name="module_title" />
                <ui:Label tabindex="-1" text="Description" display-tooltip-when-elided="true" name="module_description" style="white-space: normal;" />
                <ui:Button text="Remove Module" display-tooltip-when-elided="true" name="remove" />
            </ui:VisualElement>
        </ui:VisualElement>
        <ui:Button text="Close" display-tooltip-when-elided="true" name="close" style="flex-grow: 0; align-self: center; width: auto;" />
    </ui:VisualElement>
</ui:UXML>
